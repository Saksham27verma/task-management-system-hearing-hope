# MongoDB Connection
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hearing-hope?retryWrites=true&w=majority

# JWT Authentication
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=replace_with_32_bytes_hex_random_string

# Email Configuration
# For Gmail, use an App Password if you have 2FA enabled
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here

# Next Auth
# Generate another secure random string for NextAuth
NEXTAUTH_SECRET=replace_with_another_32_bytes_hex_random_string
NEXTAUTH_URL=http://localhost:3000

# Google OAuth Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys and Secrets for Scheduled Jobs
SCHEDULER_SECRET_KEY=replace_with_scheduler_secret_key 